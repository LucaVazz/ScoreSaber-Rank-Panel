{% extends 'base.jinja2' %}

{% block content %}
	<style type="text/css">
		/* style for input */
		label {
			position: relative;
			top: -15px;
			font-size: 90%;
			color: var(--theme-text-color);
			cursor: text;
			-webkit-transition: .3s ease;
			-moz-transition: .3s ease;
			transition: .3s ease;
		}
		input[type="text"] {
			margin-top: 27px;
			display: block;
			width: 100%;
			border: none;
			border-radius: 0;
			font-size: 105%;
			color: var(--theme-text-color);
			background: var(--theme-bg-color);
			-webkit-transition: .4s ease;
			-moz-transition: .4s ease;
			transition: .4s ease;
		}
		.bar {
			background: var(--theme-text-color);
			content: '';
			width: 100%;
			height: 1px;
			position: relative;
			margin-bottom: -7px !important;
		}
		.bar:before {
			content: '';
			position: absolute;
			width: 100%;
			height: 3px;
			background: var(--theme-link-color);
			-webkit-transform: scaleX(0);
			-moz-transform: scaleX(0);
			-ms-transform: scaleX(0);
			-o-transform: scaleX(0);
			transform: scaleX(0);
		}
		input[type="text"]:focus {
			outline: none;
		}
		input[type="text"]:focus + .bar:before {
			-webkit-transform: scaleX(1);
			-moz-transform: scaleX(1);
			-ms-transform: scaleX(1);
			-o-transform: scaleX(1);
			transform: scaleX(1);
		}
		input[type="text"]:focus + .bar + label {
			top: -35px;
			color: var(--theme-link-color);
			opacity: 1;
		}

		input[type="text"]:valid + .bar + label {
			top: -35px;
		}

		/* style for radio button */
		.radio-list {
			margin-top: 24px;
			margin-left: 5px;
		}
		.radio-list input[type="radio"] {
			position: relative;
			margin: 0;
			margin-right: 5px;
			margin-bottom: 10px;
			cursor: pointer;
		}
		.radio-list input[type="radio"]:before {
			-webkit-transform: scale(0, 0);
			-moz-transform: scale(0, 0);
			-ms-transform: scale(0, 0);
			-o-transform: scale(0, 0);
			transform: scale(0, 0);
			-webkit-transition: 0.4s cubic-bezier(0.45, 1.8, 0.5, 0.75);
  			-moz-transition: 0.4s cubic-bezier(0.45, 1.8, 0.5, 0.75);
  			transition: 0.4s cubic-bezier(0.45, 1.8, 0.5, 0.75);
			content: "";
			position: absolute;
			top: 0;
			left: 0.125rem;
			z-index: 1;
			width: 0.75rem;
			height: 0.75rem;
			background: var(--theme-link-color);
			border-radius: 50%;
		}
		.radio-list input[type="radio"]:checked:before {
			-webkit-transform: scale(1, 1);
			-moz-transform: scale(1, 1);
			-ms-transform: scale(1, 1);
			-o-transform: scale(1, 1);
			transform: scale(1, 1);
		}
		.radio-list input[type="radio"]:after {
			content: "";
			position: absolute;
			top: -0.25rem;
			left: -0.125rem;
			width: 1rem;
			height: 1rem;
			background: var(--theme-bg-color);
			border: 2px solid var(--theme-link-color);
			border-radius: 50%;
		}
		.radio-list label {
			cursor: pointer;
			font-size: 90%;
		}


		/* custom style */
		#content {
			padding: 17px;
		}

		h1 {
			font-size: 115%;
			padding-bottom: 14px;
		}

		#content > div {
			font-size: 90%;
			margin-bottom: 5px;
		}

		hr {
			opacity: 0;
			height: 21px;
		}

		#content > div.note {
			font-size: 75%;
		}

		.note {
			opacity: 0.7;
		}

		#name-preview {
			margin-top: 7px;
		}
		#name-preview:empty {
			display: none;
		}

		#color-preview {
			display: flex;
			flex-direction: row;
		}

		#color-preview > div {
			padding: 21px;
			margin-right: 7px;

			border: 2px #7f7f7f solid;

			color: var(--preview-color);
		}
	</style>

	<div id="content">
		<h1>Let's get ready!</h1>

		<input type="text" id="score-saber-id-input" required="required"/>
		<div class="bar"></div>
		<label  class="note"for="score-saber-id-input">ScroeSaber Profile - Link / - ID</label>

		<div class="note">
			Go to <a target="_blank" href="https://scoresaber.com/global">ScoreSaber.com/global</a>,
			search for your Steam User-Name in the top right corner and open your result.
		</div>
		<div class="note">
			Then copy the adress of the site which you just opened and past it in this input.
		</div>
		<div id="name-preview">
		</div>

		<hr/>

		<input type="text" id="accent-color-input" required="required" value="008139" />
		<div class="bar"></div>
		<label  class="note"for="accent-color-input">CSS-Color for styled text</label>

		<div id="color-preview" style="--preview-color: #008139;">
			<div class="light">
				Test-Text
			</div>
			<div class="dark">
				Test-Text
			</div>
		</div>

		<hr/>

		<span class="note">
			Langauge:
		</span>

		<ul class="radio-list">
			<li>
				<label for="language-radio-en">
					<input id="language-radio-en" type="radio" name="language" value="en" checked>
					English
				</label>
			</li>
			<li>
				<label for="language-radio-de">
					<input id="language-radio-de" type="radio" name="language" value="de">
					German
				</label>
			</li>
		</ul>

	</div>

	<script src="scoresaber_lib.js"></script>
	<script src="config.js"></script>
{% endblock %}
